# AI Campaign Analyst - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: openai, claude, gemini, or mock (default: mock)
LLM_PROVIDER=mock

# Timeout for LLM requests in seconds
LLM_TIMEOUT=30

# Temperature for LLM responses (0.0-1.0, lower = more deterministic)
LLM_TEMPERATURE=0.3

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Anthropic (Claude) Configuration
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Google (Gemini) Configuration
# =============================================================================
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-2.0-flash

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (production) or console (development)
LOG_FORMAT=console

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false

# =============================================================================
# Validation Thresholds
# =============================================================================
# IQR multiplier for outlier detection
OUTLIER_THRESHOLD=1.5

# Minimum impressions for a campaign to be considered significant
MIN_IMPRESSIONS_THRESHOLD=1000

# CTR above this is considered high (%)
HIGH_CTR_THRESHOLD=5.0

# Conversion rate below this is considered low (%)
LOW_CONVERSION_RATE_THRESHOLD=1.0

# CPA above this multiple of average is flagged
HIGH_CPA_MULTIPLIER=2.0
